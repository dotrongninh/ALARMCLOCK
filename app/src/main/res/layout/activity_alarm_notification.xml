<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AlarmNotification"
    android:background="#000000">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="15"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="@+id/textView5"
        android:textSize="70dp"
        android:textColor="@color/xám"
        app:layout_constraintHorizontal_bias="0.9"
        android:layout_marginTop="50dp"
        />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="03"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="@+id/textView5"
        app:layout_constraintRight_toRightOf="parent"
        android:textSize="70dp"
        android:textColor="@color/xám"
        app:layout_constraintHorizontal_bias="0.1"
        android:layout_marginTop="50dp"
        />
    <TextView
        android:textColor="@color/xám"
        android:text=":"
        android:textSize="50dp"
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="@id/textView4"
        app:layout_constraintLeft_toLeftOf="@id/textView3"
        android:layout_marginTop="55dp"
        />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="1dp"
        android:layout_height="16dp"
        android:layout_marginLeft="110dp"
        android:text=""
        android:textColor="@color/xám"
        android:textSize="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView3"

        />
    <TextView
        android:textColor="@color/xám"
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/textView3"
        app:layout_constraintLeft_toLeftOf="@id/textView6"
        android:text="Năm,"
        android:textSize="16dp"
        android:layout_marginLeft="35dp"
        />

    <TextView
        android:textColor="@color/xám"
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/textView4"
        app:layout_constraintLeft_toLeftOf="@+id/textView7"
        android:layout_marginLeft="43dp"
        android:text="21"
        android:textSize="16dp"

        />
    <TextView
        android:textColor="@color/xám"
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/textView4"
        app:layout_constraintLeft_toLeftOf="@+id/textView8"
        android:text="tháng"
        android:textSize="16dp"
        android:layout_marginLeft="22dp"
        />
    <TextView
        android:textColor="@color/xám"
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/textView4"
        app:layout_constraintLeft_toLeftOf="@+id/textView9"
        android:text="9"
        android:textSize="16dp"
        android:layout_marginLeft="45dp"
        />
    <TextView
        android:textColor="@color/white"
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/textView5"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="Báo thức"
        android:textSize="25dp"
        android:layout_marginTop="40dp"
        />
    <TextView
        android:id="@+id/bt1"
        android:layout_width="145dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@+id/textView11"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textColor="@color/white"
        android:gravity="center"
        android:text="6+8"
        android:textSize="35dp"
        android:background="@drawable/circle3"
        android:layout_marginTop="10dp"
        />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"

        app:layout_constraintTop_toBottomOf="@+id/bt1">

        <EditText
            android:id="@+id/text"
            android:layout_width="270dp"
            android:layout_height="40dp"
            android:layout_marginLeft="75dp"
            android:background="@drawable/circle4"
            android:gravity="center"
            android:hint="..."


            android:inputType="number"
            android:textSize="40dp" />

        <Button
            android:id="@+id/btnum1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/circle3"
            android:text="1"
            android:textSize="20dp" />

        <Button
            android:id="@+id/btnum2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/btnum1"
            android:background="@drawable/circle3"
            android:text="2"
            android:textSize="20dp" />

        <Button
            android:id="@+id/btnum3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/btnum2"
            android:background="@drawable/circle3"
            android:text="3"
            android:textSize="20dp" />

        <Button
            android:id="@+id/btnum4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/btnum1"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/circle3"
            android:text="4"
            android:textSize="20dp" />

        <Button
            android:id="@+id/btnum5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/btnum2"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/btnum4"
            android:background="@drawable/circle3"
            android:text="5"
            android:textSize="20dp" />

        <Button
            android:id="@+id/btnum6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/btnum3"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/btnum5"
            android:background="@drawable/circle3"
            android:text="6"
            android:textSize="20dp" />

        <Button
            android:id="@+id/btnum7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/btnum4"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/circle3"
            android:text="7"
            android:textSize="20dp" />

        <Button
            android:id="@+id/btnum8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/btnum5"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/btnum7"
            android:background="@drawable/circle3"
            android:text="8"
            android:textSize="20dp" />

        <Button
            android:id="@+id/btnum9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/btnum6"
            android:layout_marginTop="10dp"
            android:text="9"
            android:layout_toRightOf="@id/btnum8"
            android:background="@drawable/circle3"
            android:textSize="20dp" />

        <ImageButton
            android:id="@+id/btexe"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/btnum7"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/circle3"
            android:src="@drawable/ic_baseline_close_24_two"
            android:textSize="20dp" />

        <Button
            android:id="@+id/btnum0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/btnum8"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="30dp"
            android:layout_toRightOf="@id/btexe"
            android:background="@drawable/circle3"
            android:text="0"
            android:textSize="20dp" />

        <Button
            android:id="@+id/btnumchek"
            android:layout_width="105dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/btnum9"

            android:layout_marginStart="0dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="0dp"
            android:layout_toEndOf="@+id/btnum0"
            android:layout_toRightOf="@id/btnum0"
            android:background="@drawable/circle2"
            android:text="Stop"
            android:textColor="#B8031E"
            android:textSize="20dp" />


    </RelativeLayout>

</android.support.constraint.ConstraintLayout>